{
	"compilerOptions": {
		"isolatedModules": true,
		"baseUrl": "",
		"noErrorTruncation": true,
		"target": "es2017",
		"outDir": "dist",
		"sourceMap": false,
		"moduleResolution": "node",
		"lib": ["ESNext"],
		"noUnusedLocals": true,
		"declaration": true,
		"declarationDir": "dist/@types",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"exclude": ["node_modules", "dist"]
}
